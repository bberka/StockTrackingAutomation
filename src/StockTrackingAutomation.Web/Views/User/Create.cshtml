@using Domain.Enums;
@model Domain.Entities.User

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Kullanıcı Ekle</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <br />
            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label"></label>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <br />
            <label asp-for="RoleType" class="control-label"></label>
            <select asp-for="RoleType" class="form-select" aria-label="Seçiniz">
                <option selected disabled value="0">Seçiniz</option>
                @foreach (RoleType role in (RoleType[])Enum.GetValues(typeof(RoleType)))
                {
                    <option value="@((int)role)">@role.ToString()</option>
                }
            </select>

            <br />
            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-primary w-100" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="List">Listeye Dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
