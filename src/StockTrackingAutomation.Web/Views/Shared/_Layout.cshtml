@using Domain.Helpers;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StockTrackingAutomation.Web</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.2/css/jquery.dataTables.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" asp-append-version="true" />

</head>
<body>
    <div class="row">
        <div class="col-sm-2 bg-black h-100">
            @if (ViewContext.HttpContext.IsAuthenticated())
            {
                <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                    <a class="nav-link" asp-controller="Home" asp-action="Index" role="tab" aria-selected="true">
                        <i class="fas fa-chart-line fa-fw me-3"></i>
                        Anasayfa
                    </a>
                    <a class="nav-link" asp-controller="Product" asp-action="List" role="tab" aria-selected="false">
                        <i class="fas fa-cart-shopping fa-fw me-3"></i>
                        Ürünler
                    </a>
                    <a class="nav-link" asp-controller="Purchase" asp-action="List" role="tab" aria-selected="false">
                        <i class="fas fa-cart-plus fa-fw me-3"></i>
                        Alışlar
                    </a>
                    <a class="nav-link" asp-controller="Sale" asp-action="List" role="tab" aria-selected="false">
                        <i class="fas fa-money-bill-trend-up fa-fw me-3"></i>

                        Satışlar
                    </a>
                    <a class="nav-link" asp-controller="DebtLog" asp-action="List" role="tab" aria-selected="false">
                        <i class="fas fa-money-bill fa-fw me-3"></i>

                        Borç Takip
                    </a>
                    <a class="nav-link" asp-controller="Customer" asp-action="List" role="tab" aria-selected="false">
                        <i class="fas fa-users-between-lines fa-fw me-3"></i>
                        Müşteriler
                    </a>
                    <a class="nav-link" asp-controller="Supplier" asp-action="List" role="tab" aria-selected="false">
                        <i class="fas fa-users-rectangle fa-fw me-3"></i>
                        Tedarikçiler
                    </a>
                    <a class="nav-link" asp-controller="User" asp-action="List" role="tab" aria-selected="false">
                        <i class="fas fa-users-gear fa-fw me-3"></i>
                        Kullanıcılar
                    </a>
                    <hr />
                    <a class="nav-link" asp-controller="Account" asp-action="Details" role="tab" aria-selected="false">
                        <i class="fas fa-user-gear fa-fw me-3"></i>
                        Hesabım
                    </a>
                    <a class="nav-link" asp-controller="Account" asp-action="ChangePassword" role="tab" aria-selected="false">
                        <i class="fas fa-user-gear fa-fw me-3"></i>
                        Şifre Değiştir
                    </a>
                    <hr />
                    <a class="nav-link" asp-controller="Home" asp-action="Logout" role="tab" aria-selected="false">
                        <i class="fas fa-right-from-bracket fa-fw me-3"></i>
                        Çıkış Yap
                    </a>
                </div>
            }
        </div>
        <div class="col">
            <div class="container ">
                <main role="main" class="pb-3 ">
                    <div class="justify-content-center">
                        <br />
                        <br />
                        @RenderBody()
                    </div>
                </main>
            </div>
        </div>
    </div>







    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="//cdn.datatables.net/1.13.2/js/jquery.dataTables.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
