@model IEnumerable<Domain.Entities.Supplier>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card shadow mb-4">
    <div class="card-header py-3 ">
        <div class="row px-3">
            
            <div class="d-flex justify-content-between">
                <h2 class="m-0 font-weight-bold text-black">Tedarikçi Listesi</h2>
                <a asp-action="Create" class="btn btn-success ">Yeni Tedarikçi Ekle</a>

            </div>
        </div>


    </div>
    <div class="card-body">
        <div class="row">
            <div class="col">
                <table class="table" id="my_DataTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.RegisterDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CompanyName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EmailAddress)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PhoneNumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Debt)
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RegisterDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CompanyName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EmailAddress)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Debt)
                                </td>

                                <td>
                                    
                                    <div class="dropdown">
                                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Menü
                                        </button>
                                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                            @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "dropdown-item text-success" })
                                            @Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "dropdown-item text-info " })
                                            <div class="dropdown-divider"></div>
                                            @Html.ActionLink("Borç Kayıtları", "SupplierDebtLog", "DebtLog", new { id = item.Id }, new { @class = "dropdown-item" })
                                            @Html.ActionLink("Alışlar", "SupplierPurchases", "Purchase", new { id = item.Id }, new { @class = "dropdown-item" })
                                            <div class="dropdown-divider"></div>
                                            @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "text-danger dropdown-item" })
                                        </div>
                                    </div>


                                </td>
                            </tr>
                        }
                    </tbody>
                </table>


            </div>
        </div>
    </div>
</div>




